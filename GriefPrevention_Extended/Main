package XDemonic.GriefPrevention_Extended;

import java.util.ArrayList;
import java.util.List;
import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.Server;
import org.bukkit.command.ConsoleCommandSender;
import org.bukkit.event.Listener;
import org.bukkit.plugin.java.JavaPlugin;

public class Main
  extends JavaPlugin
  implements Listener
{
  public static BreakListener breaklistener = null;
  public static Server server = null;
  public static ConsoleCommandSender console = null;
  public static List<String> DebugPlayers = new ArrayList<String>();
  
  public void onEnable()
  {
    saveDefaultConfig();
    server = Bukkit.getServer();
    console = server.getConsoleSender();
    new BreakListener(this);
    getCommand("gpereload").setExecutor(new Commands(this));
    getCommand("gpeadd").setExecutor(new Commands(this));
    getCommand("gpedel").setExecutor(new Commands(this));
    getCommand("gpelist").setExecutor(new Commands(this));
    getCommand("gpedebug").setExecutor(new Commands(this));
    log("Has Been Enabledasd!");
    log("[Created By XDemonic]");
  }
  
  public static void log(String s)
  {
    console.sendMessage(ChatColor.GOLD + "[GP_Extented] " + ChatColor.GREEN + s);
  }
  
  public static void ERROR(String s)
  {
    console.sendMessage(ChatColor.DARK_RED + "[GP_Extented] " + ChatColor.RED + "HAS ENCOUNTERED AN INTERNAL ERROR!");
    console.sendMessage(ChatColor.DARK_RED + "[GP_Extented] " + ChatColor.RED + "==============MESSAGE==============");
    console.sendMessage(ChatColor.GOLD + s);
    console.sendMessage(ChatColor.DARK_RED + "[GP_Extented] " + ChatColor.RED + "============END MESSAGE============");
  }
  
  public void onDisable()
  {
    log("Has Been Disabled!");
  }
}
